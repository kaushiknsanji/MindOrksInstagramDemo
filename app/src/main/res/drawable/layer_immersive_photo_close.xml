<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/immersiveModeSystemBarColor" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/white"
                android:dashWidth="4dp"
                android:dashGap="4dp" />
        </shape>
    </item>
    <item
        android:bottom="8dp"
        android:drawable="@drawable/ic_immersive_photo_close"
        android:gravity="center"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
</layer-list>