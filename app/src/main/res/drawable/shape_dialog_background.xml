<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- View background color -->
    <solid android:color="@color/white" />

    <!-- View border color and width -->
    <stroke
        android:width="1dp"
        android:color="@color/gray_light" />

    <!-- Content padding -->
    <padding
        android:bottom="@dimen/dialog_background_content_padding"
        android:left="@dimen/dialog_background_content_padding"
        android:right="@dimen/dialog_background_content_padding"
        android:top="@dimen/dialog_background_content_padding" />

    <!-- Corner curve radius -->
    <corners android:radius="5dp" />

</shape>