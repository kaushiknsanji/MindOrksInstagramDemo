    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Tab" parent="TextAppearance.MaterialComponents.Tab" />

    <style name="AppTheme.Chip" parent="TextAppearance.MaterialComponents.Chip" />

    <style name="AppTheme.Toolbar" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

